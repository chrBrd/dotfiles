#!/bin/env/ bash

# Quick power off and reboot.
alias off='systemctl poweroff'
alias reboot='systemctl reboot'

# Quick VPN up and down.
alias vpnup='sudo systemctl start openvpn@chris'
alias vpndown='sudo systemctl stop openvpn@chris'

# Quick dir changes.
alias work='cd /run/media/chris/fastData/work'
alias fastdata='cd /run/media/chris/fastData'
alias main='cd /run/media/chris/fastData/work/main'

# Conditional terminal colouring.
alias ssh=ssh_term_bg
